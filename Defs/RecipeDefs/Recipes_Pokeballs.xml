	          <categories>
	            <li>Apricorn</li>
	          </categories>
	        </filter>
	        <count>10</count>
	      </li>
	      <li>
	      	<filter>
	        	<thingDefs>
					<li>Component</li>
				</thingDefs>
			</filter>
	        <count>1</count>
	      </li>
	    </ingredients>
			<products>
				<Ultraball>1</Ultraball>
			</products>
	    <workSkill>Pokemon</workSkill>
		<skillRequirements>
	    	<Pokemon>6</Pokemon>
