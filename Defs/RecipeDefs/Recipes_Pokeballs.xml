	    <ingredients>
	      <li>
	        <filter>
	          <categories>
	            <li>Apricorn</li>
	          </categories>
	        </filter>
	        <count>5</count>
	      </li>
	      <li>
	        <filter>
	        	<thingDefs>
					<li>Component</li>
				</thingDefs>
			</filter>
	        <count>1</count>
	      </li>
	    </ingredients>
			<products>
				<Greatball>1</Greatball>
			</products>
	    <workSkill>Pokemon</workSkill>
	    <skillRequirements>
	    	<Pokemon>3</Pokemon>
	    </skillRequirements>
	    <recipeUsers>
	        <li>TablePokeball</li>
	    </recipeUsers>
  	</RecipeDef>

  	<RecipeDef Name="CraftUltraball" ParentName="CraftPokeballBase">
	    <defName>CraftUltraball</defName>
	    <label>craft Ultraball</label>
	    <description>Craft a Ultraball from one Apricorn. Has higher catch chance then a Greatball.</description>
	    <jobString>Craft a Ultraball.</jobString>
	    <workSpeedStat>WorkSpeedGlobal</workSpeedStat>
	    <requiredGiverWorkType>PokemonHandling</requiredGiverWorkType>
