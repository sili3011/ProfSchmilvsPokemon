      <statFactors>
        <ArmorRating_Sharp>1.3</ArmorRating_Sharp>
        <ArmorRating_Heat>2.2</ArmorRating_Heat>
        <Insulation_Cold>3.1</Insulation_Cold>
        <Insulation_Heat>3.1</Insulation_Heat>
